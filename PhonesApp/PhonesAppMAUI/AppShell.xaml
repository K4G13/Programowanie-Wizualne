<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhonesAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PhonesAppMAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="PhonesAppMAUI">

    <FlyoutItem>

        <ShellContent
            Title="Phones Catalogue"
            ContentTemplate="{DataTemplate local:PhonesPage}"
            Route="PhonesPage" />

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    </FlyoutItem>   

</Shell>
